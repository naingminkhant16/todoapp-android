<?xml version="1.0" encoding="utf-8"?><!-- rounded_corner_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="100dp" /> <!-- Adjust the radius to your desired value -->
    <solid android:color="@android:color/white" /> <!-- Set the background color -->
    <!-- Optionally, you can add stroke for a border -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" /> <!-- Set the border color and width -->
</shape>


