<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--Primary brand color   -->
        <item name="colorPrimary">@color/mint</item>
        <item name="colorPrimaryVariant">@color/mint</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--        Secondary brand color-->

        <!--        Status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!--        Disable the default action bar -->
        <item name="windowActionBar">false</item>
        <!--        Set a Toolbar as the action bar -->
        <item name="windowNoTitle">true</item>
    </style>

</resources>